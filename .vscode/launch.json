    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run project",
            "preLaunchTask": "Build Docker image",
            "runtimeExecutable": "docker",
            "runtimeArgs": [
                "run", "--rm",
                "--name", "smash-league",
                "-p", "9229:9229",
                "-v", "${workspaceFolder}/.env:/usr/app/.env",
                "-v", "${workspaceFolder}/src:/usr/app/src",
                "-v", "${workspaceFolder}/ranking-info:/usr/app/ranking-info",
                "smash-league",
                "npm", "run", "debug:smash-league"
            ],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/app",
            "port": 9229,
            // "console":"integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run express server",
            "preLaunchTask": "Build Docker image",
            "runtimeExecutable": "docker",
            "runtimeArgs": [
                "run", "--rm",
                "--name", "smash-league",
                "-p", "9229:9229",
                "-p", "3000:3000",
                "-v", "${workspaceFolder}/.env:/usr/app/.env",
                "-v", "${workspaceFolder}/src:/usr/app/src",
                "-v", "${workspaceFolder}/ranking-info:/usr/app/ranking-info",
                "smash-league",
                "npm", "run", "debug:slack-listener"
            ],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/app",
            "port": 9229,
            // "console":"integratedTerminal",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug tests",
            "preLaunchTask": "Build Docker image",
            "runtimeExecutable": "docker",
            "runtimeArgs": [
                "run", "--rm",
                "-p", "9229:9229",
                "-v", "${workspaceFolder}/src:/usr/app/src",
                "smash-league",
                "node", "--inspect-brk=0.0.0.0:9229",
                "./node_modules/.bin/jest", 
                "--runInBand", "--no-cache", "--coverage",
            ],
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/app",
            "port": 9229,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "disableOptimisticBPs": true,
            // "console":"integratedTerminal",
        }
    ]
}